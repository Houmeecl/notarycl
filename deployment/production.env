# DocuSignPro Complete - Configuración de Producción
# ⚠️ IMPORTANTE: Cambiar todos los valores por credenciales reales

# =================================
# CONFIGURACIÓN BÁSICA
# =================================
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# =================================
# BASE DE DATOS POSTGRESQL
# =================================
# Reemplazar con datos reales de tu VPS
DATABASE_URL=postgresql://docusign_user:CAMBIAR_PASSWORD_SEGURO@localhost:5432/docusignpro

# =================================
# SEGURIDAD
# =================================
# Generar clave secreta segura (mínimo 64 caracteres)
SESSION_SECRET=CAMBIAR_POR_CLAVE_SUPER_SECRETA_Y_LARGA_PARA_PRODUCCION_MIN_64_CHARS

# JWT para autenticación (generar clave segura)
JWT_SECRET=CAMBIAR_POR_JWT_SECRET_SUPER_SEGURO_PARA_TOKENS

# =================================
# AGORA.IO (VIDEOLLAMADAS RON)
# =================================
# Obtener en https://console.agora.io/
AGORA_APP_ID=tu_agora_app_id_real
AGORA_APP_CERTIFICATE=tu_agora_app_certificate_real
VITE_AGORA_APP_ID=tu_agora_app_id_real

# =================================
# PROVEEDORES DE PAGO
# =================================

# Stripe (https://dashboard.stripe.com/)
STRIPE_SECRET_KEY=sk_live_tu_stripe_secret_key_real
STRIPE_PUBLISHABLE_KEY=pk_live_tu_stripe_publishable_key_real
STRIPE_WEBHOOK_SECRET=whsec_tu_webhook_secret

# PayPal (https://developer.paypal.com/)
PAYPAL_CLIENT_ID=tu_paypal_client_id_real
PAYPAL_CLIENT_SECRET=tu_paypal_client_secret_real
PAYPAL_MODE=live

# MercadoPago (https://developers.mercadopago.com/)
MERCADOPAGO_ACCESS_TOKEN=tu_mercadopago_access_token_real
MERCADOPAGO_PUBLIC_KEY=tu_mercadopago_public_key_real

# WebPay Plus (https://www.transbankdevelopers.cl/)
WEBPAY_COMMERCE_CODE=tu_webpay_commerce_code
WEBPAY_API_KEY=tu_webpay_api_key
WEBPAY_ENVIRONMENT=production

# =================================
# SERVICIOS DE EMAIL
# =================================
# SendGrid (https://sendgrid.com/)
SENDGRID_API_KEY=SG.tu_sendgrid_api_key_real
FROM_EMAIL=noreply@tudominio.com
SUPPORT_EMAIL=soporte@tudominio.com

# =================================
# SERVICIOS DE SMS/WHATSAPP
# =================================
# Twilio (https://www.twilio.com/)
TWILIO_ACCOUNT_SID=tu_twilio_account_sid
TWILIO_AUTH_TOKEN=tu_twilio_auth_token
TWILIO_PHONE_NUMBER=+56912345678

# WhatsApp Business API
WHATSAPP_TOKEN=tu_whatsapp_business_token
WHATSAPP_PHONE_ID=tu_whatsapp_phone_id

# =================================
# SERVICIOS DE IA
# =================================
# OpenAI (https://platform.openai.com/)
OPENAI_API_KEY=sk-tu_openai_api_key_real

# =================================
# ALMACENAMIENTO DE ARCHIVOS
# =================================
# AWS S3 o compatible
AWS_ACCESS_KEY_ID=tu_aws_access_key
AWS_SECRET_ACCESS_KEY=tu_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=docusignpro-documents

# =================================
# MONITOREO Y LOGS
# =================================
# Sentry para error tracking
SENTRY_DSN=https://tu_sentry_dsn@sentry.io/proyecto

# =================================
# CONFIGURACIÓN DE DOMINIO
# =================================
DOMAIN=tudominio.com
API_URL=https://api.tudominio.com
FRONTEND_URL=https://tudominio.com

# =================================
# CONFIGURACIÓN DE NOTARIOS
# =================================
# Configuración específica para notarios registrados
DEFAULT_NOTARY_JURISDICTION=Región Metropolitana, Chile
NOTARY_REGISTRATION_ENABLED=true
NOTARY_VERIFICATION_REQUIRED=true

# =================================
# CONFIGURACIÓN RON
# =================================
RON_ENABLED=true
RON_RECORDING_REQUIRED=true
RON_MAX_SESSION_DURATION=7200
RON_BACKUP_RECORDING_URL=https://backup.tudominio.com/recordings

# =================================
# CONFIGURACIÓN DE SEGURIDAD
# =================================
# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# IP Blocking
IP_BLOCKING_ENABLED=true
AUTO_BLOCK_THRESHOLD=20
BLOCK_DURATION_MS=86400000

# =================================
# CONFIGURACIÓN DE BACKUP
# =================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups/docusignpro

# =================================
# CONFIGURACIÓN DE LOGS
# =================================
LOG_LEVEL=info
LOG_FILE=/var/log/docusignpro/app.log
ERROR_LOG_FILE=/var/log/docusignpro/error.log
ACCESS_LOG_FILE=/var/log/docusignpro/access.log